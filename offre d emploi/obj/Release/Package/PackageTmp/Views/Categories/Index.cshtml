@model IEnumerable<offre_d_emploi.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Type d'emploi</h2>

<p>
    @Html.ActionLink("Crée neauvau type", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.ActionLink("Editer", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaille", "Details", new { id = item.Id }) |
                @Html.ActionLink("Suprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
